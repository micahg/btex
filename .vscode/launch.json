    "version": "0.2.0",
    "configurations": [
        {
            "name": "BTex Local",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/btex.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "BTex Remote",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": true,
        }
    ]
}